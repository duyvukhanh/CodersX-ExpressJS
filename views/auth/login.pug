extends ../layout/common.pug

block content     
    h1 Login 
    if errors
        each error in errors
            .alert.alert-danger= error
    hr


    form(method="POST")
        label Email
        span &nbsp;
        input(type="text", name="email", class="form-control", value=values ? values.email : "")
        br
        label Password
        span &nbsp;
        input(type="password", name="password",class="form-control" , value=values ? values.password : "")
        br
        button(class="btn btn-primary ml-2") Login